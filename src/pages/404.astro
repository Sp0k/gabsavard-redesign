---
import BaseLayout from "../layouts/BaseLayout.astro"

const pageTitle = "Page not found"
---
<BaseLayout pageTitle={pageTitle}>
  <div class="max-w-screen-xl h-[75vh] flex">
    <div class="mx-auto my-auto flex flex-col items-center gap-5">
      <h1 class="text-[#459DDE] text-8xl md:text-8xl font-Nunito">404</h1>
      <h2 class="text-[#D9D9D9] text-4xl md:text-5xl font-Nunito">Page Not Found</h2>
      <p class="text-[#D9D9D9] text-xl md:text-2xl font-Source-Sans-Pro text-center">
        Seems like the page you were looking for does not exists or another error occured.
      </p>
      <a
        href="/"
        class="border md:border-2 border-[#459DDE] text-[#459DDE] w-fit px-4 transition-all h-fit py-4 mt-4 text-2xl md:text-4xl mx-auto hover:bg-[#459DDE] hover:text-[#252525]"
      >
        Back to home
      </a>
    </div>
  </div>
</BaseLayout>
