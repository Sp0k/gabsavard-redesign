---
import { ViewTransitions } from "astro:transitions"
import Navigation from "../components/admin/Navigation"
import "../styles/global.css"

const { pageTitle, accessToken, refreshToken } = Astro.props
const year = new Date().getFullYear();
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/computer.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>GS | {pageTitle}</title>
    <ViewTransitions />
  </head>
  <body class="bg-[#252525]">
    <div class="max-w-screen-2xl mx-auto md:mt-[2dvh]">
      <Navigation accessToken={accessToken} refreshToken={refreshToken} />
      <div class="flex flex-row h-[100%] justify-center gap-8 ml-8 items-start md:pr-1">
        <div class="max-w-[1400px] w-full min-h-[500px] h-[87dvh] md:max-h-[83dvh] overflow-y-scroll scrollbar scroll-smooth overscroll-none">
          <div class="mr-6 md:mr-0">
            <slot/>
          </div>
          <p class="mx-auto text-[#999999] w-fit font-Source-Sans-Pro text-sm md:text-base py-6">
            Â© Copyright {year}. Made by Gab Savard.
          </p>
        </div>
      </div>
    </div>
    </div>
  </body>
</html>
